 <section style="background-color:{{ section.settings.sectionBg }};"  class="announcment announcement-bar  " role="region" aria-label="{{ 'sections.header.announcement' | t }}" 
  

        {%- if section.settings.title != blank -%}
          {%- if section.settings.link != blank -%}
            <a href="{{ section.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <div class="page-width">
                <p class="announcement-bar__message {{ section.settings.text_alignment }} h3" style="color:{{ section.settings.textColor }};">
                  <span>{{ section.settings.title | escape }}</span>
                  {%- if section.settings.link != blank -%}
                    {% render 'icon-arrow' %}
                  {%- endif -%}
                </p>
              </div>
          {%- if section.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      
     
    
</section>

{% schema %}
  {
    "name": "Announcement", 
    "settings": [
      {
        "type":"textarea",
        "id":"title",
        "label":"Text",
        "default":"Transform your paddle into a unique extension of your passion for pickleball with Pickleball Banz"
      },  
       
      {
        "type":"url",
        "id":"link",
        "label":"Url" 
      },  
       
      {
        "type":"color",
        "id":"sectionBg",
        "label":"Section background"
      } , 
      {
        "type":"color",
        "id":"textColor",
        "label":"Text Color"
      } , 
       
      {
        "type":"checkbox",
        "id":"sticky",
        "label":"Make Sticky",
        "default":true
      } ,
      {
          "type": "select",
          "id": "text_alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center",
          "label": "Text Alignment"
        }
    ],
       
    "presets":[
      {
        "name":"Announcement"
      }
    ]
  }
{% endschema %}

