
 <section class="testimonialsSection" style="background-color:{{ section.settings.sectionBg }};" >
  <div class="page-width " >
    
      
    {% if section.settings.title %}
        <div class="titleHeader">
          <h2>{{ section.settings.title }}</h2>
        </div>
    {% endif %}

    


      <div class="swiper testimonials">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
      <div class=" swiper-slide">
        <div class="testimonial">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url:'1000x' }}" alt="{{ block.settings.image.alt }}" /> 
        {% endif %}

          
        <img src="{{ 'star.png' | asset_url }}" /> 
        
        {%- if block.settings.title -%}
          <h4>{{ block.settings.title }}</h4>
        {%- endif -%}
        {%- if block.settings.content -%}
          <p>{{ block.settings.content }}</p>
        {%- endif -%}

        {%- if block.settings.client -%}
          <span>{{ block.settings.client }}</span>
        {%- endif -%} 

        <div class="Verified">
          <svg height="100%" width="100%" xmlns="http://www.w3.org/2000/svg" classname="w-6 h-6" viewBox="0 0 512 512" fill="currentColor">
              <path fill="currentColor" strokelinecap="round" strokelinejoin="round" d="M322.144 27.84a92.48 92.48 0 0 0 -132.288 0l-19.904 20.416 -28.48 -0.352a92.48 92.48 0 0 0 -93.568 93.568l0.32 28.48 -20.352 19.904a92.48 92.48 0 0 0 0 132.288l20.384 19.904 -0.352 28.48a92.48 92.48 0 0 0 93.568 93.568l28.48 -0.32 19.904 20.352a92.48 92.48 0 0 0 132.288 0l19.904 -20.384 28.48 0.352a92.48 92.48 0 0 0 93.568 -93.568l-0.32 -28.48 20.352 -19.904a92.48 92.48 0 0 0 0 -132.288l-20.384 -19.904 0.352 -28.48a92.48 92.48 0 0 0 -93.568 -93.568l-28.48 0.32 -19.904 -20.352zm9.184 191.488 -96 96a16 16 0 0 1 -22.656 0l-48 -48a16 16 0 1 1 22.656 -22.656L224 281.376l84.672 -84.704a16 16 0 0 1 22.656 22.656z"></path></svg>
         <span>Verified Purchase</span> 
        </div>

          
        </div>
        
      </div>
      {% endfor %}
       
    </div>
    <div class="swiper-pagination"></div>
  </div>
    
  </div>
     
    
</section>

{% schema %}
  {
    "name": "Testimonials", 
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title",
        "default":"Join The Personalization Revolution"
      } ,
      {
        "type":"color",
        "id":"sectionBg",
        "label":"Section background"
      }
    ],
    "blocks":[
      {
        "type":"testimonials",
        "name":"Testimonials",
        "settings":[
            {
              "type": "text",
              "id": "title",  
              "label": "Title"
            },
            {
              "type": "textarea",
              "id": "content",  
              "label": "Feedback"
            },
            {
              "type": "text",
              "id": "client",
              "label": "Client's Name"
            },
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            }
        ]
      }
    ],
       
    "presets":[
      {
        "name":"Testimonials"
      }
    ]
  }
{% endschema %}

