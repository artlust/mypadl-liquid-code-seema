<section class="imageBoxSection" style="padding: 80px 20px;">
  <div class="page-width " > 
    {% if section.settings.title %}
        <div class="titleHeader">
          <h2>{{ section.settings.title }}</h2>
        </div>
    {% endif %}
  </div>
  
  <div class="flex">
    {% for block in section.blocks %}
      <div class="imageBox">
          
        {% if block.settings.icon %}  
            <img src="{{ block.settings.icon | img_url:'1000x' }}" alt="{{ block.settings.icon.alt }}" />  
           
        {% endif %}
       
        <h2>{{ block.settings.title }}</h2>
        <h3>{{ block.settings.subtitle }}</h3>
      </div>
    {% endfor %}
  </div>
</section>
{% schema %}
  {
    "name": "Image Box",
    "settings": [
       {
        "type":"text",
        "id":"title",
        "label":"Title" 
      } 
    ],
    "blocks":[
      {
        "type":"image",
        "name":"Image",
        "settings":[
          {
            "type":"image_picker",
            "id":"icon",
            "label":"Select Image" 
          },
          {
            "type":"text",
            "id":"title",
            "label":"Title",
            "default":"title"
          },
          {
            "type":"textarea",
            "id":"subtitle",
            "label":"Sub Title" 
          } 
        ]
      }
    ],
    "presets":[
      {
        "name":"Image Box"
      }
    ]
  }
{% endschema %}

